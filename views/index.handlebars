<div class="container" id="mainContain">

    <div class="row" id="rowOne"> 
        <div class="col-md-12 text-center">
            <h1>BURGERS!</h1>
        </div>
    </div>
<br>
    <div class="row" id="rowTwo">
        <div class="col-md-4" id="burgerList">
            <h2>Burger List!</h2>
        <br>
            <ul>
              {{#each burgers}}
              {{#unless devoured}}
              {{> burgers/burger-block devour=true}}
              {{/unless}}
              {{/each}}
            </ul>
        </div>

        <div class="col-md-4"></div>

        <div class="col-md-4" id="devouredList">
             
            <h2>Burgers that have been devoured!</h2>    
        <br>
            <ul>
              {{#each burgers}}
              {{#if devoured}}
              {{> burgers/burger-block devour=false}}
              {{/if}}
              {{/each}}
            </ul>

        </div>
    </div>

<div class="row" id="rowThree">
    <div class="col-md-4 text-center" id="addBurger">
      <h2>Add a Burger</h2>
      <form id="create-form">

  <div class="form-group">
    <label for="bu">Burger Name:</label>
    <input type="text" id="bu" name="burger_name">
  </div>

  <div class="form-group">
    <label for="devoured">Do you want your burger to stay or to go?</label><br>
    <input type="radio" name="devoured" value="1" id="devoured" checked>To Stay!<br>
    <input type="radio" name="devoured" value="0" id="uneaten"> To Go!
  </div>

  <button type="submit">Add a Burger</button>
      </form>
    </div>
</div>

</div>