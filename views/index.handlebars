<div class="container">
    <div class="row"> 
        <div class="col-md-12 text-center">
            <h1>BURGERS!</h1>
        </div>
    </div>


<h2>Burger List!</h2>

<ul>
  {{#each burgers}}
  {{#unless devoured}}
  {{> burgers/burger-block devour=true}}
  {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that have been devoured!</h2>

<ul>
  {{#each burgers}}
  {{#if devoured}}
  {{> burgers/burger-block devour=false}}
  {{/if}}
  {{/each}}
</ul>

<div class="container">
<h2>Add a Burger</h2>
<form id="create-form">

  <div class="form-group">
    <label for="bu">Burger Name:</label>
    <input type="text" id="bu" name="burger_name">
  </div>

  <div class="form-group">
    <label for="devoured">Do you want your burger to stay or to go?</label><br>
    <input type="radio" name="devoured" value="1" id="devoured" checked>To Stay!<br>
    <input type="radio" name="devoured" value="0" id="uneaten"> To Go!
  </div>

  <button type="submit">Add a Burger</button>
</form>
</div>

</div>